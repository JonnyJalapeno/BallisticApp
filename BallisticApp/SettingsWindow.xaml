<Window x:Class="BallisticApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ballistic Settings" Height="600" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Inputs (9 rows) -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Target type selection -->
            <RowDefinition Height="Auto"/>
            <!-- Previews -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Numeric Inputs -->
        <TextBlock Text="Distance to target (m):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="DistanceTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Scope height over bore (cm):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="ScopeHeightTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Ballistic coefficient:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="BallisticCoeffTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Drag Model:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <RadioButton x:Name="None" Content="None" Margin="5"/>
            <RadioButton x:Name="G1" Content="G1" Margin="5" IsChecked="True"/>
            <RadioButton x:Name="G7" Content="G7" Margin="5"/>
        </StackPanel>

        <TextBlock Text="Target radius (cm):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TargetRadiusTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Bullet velocity (m/s):" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="VelocityTextBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Zero Distance (m):" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="ZeroDistanceTextBox" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Wind Direction (deg):" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="WindDirectionTextBox" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Wind Speed (m/s):" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="WindSpeedTextBox" Grid.Row="8" Grid.Column="1" Margin="5"/>

        <!-- Target Type Selection -->
        <TextBlock Text="Target Type:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <RadioButton x:Name="CircularOption" Content="Circular" Margin="5" IsChecked="True"/>
            <RadioButton x:Name="AxesOption" Content="Axes" Margin="5"/>
        </StackPanel>

        <!-- Previews -->
        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <StackPanel Margin="5">
                <TextBlock Text="Circular Preview" HorizontalAlignment="Center"/>
                <Canvas x:Name="CircularPreview" Width="100" Height="100" Background="White" />
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Axes Preview" HorizontalAlignment="Center"/>
                <Canvas x:Name="AxesPreview" Width="100" Height="100" Background="White" />
            </StackPanel>
        </StackPanel>

        <!-- Spacer -->
        <Grid Grid.Row="11"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="12" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>