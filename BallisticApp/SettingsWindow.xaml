<Window x:Class="BallisticApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BallisticApp"
        Title="Ballistic Settings" Height="650" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TabControl -->
            <RowDefinition Height="*"/>
            <!-- Tab content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- TabControl -->
        <TabControl Grid.Row="0">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <WrapPanel IsItemsHost="True" Grid.Row="0"/>
                        <ContentPresenter Grid.Row="1" ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>

            <!-- Tab 1: Ballistics -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock TextAlignment="Center">
                        Ammunition+
                        <LineBreak/>
                        Firearm
                    </TextBlock>
                </TabItem.Header>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Distance -->
                        <RowDefinition Height="Auto"/>
                        <!-- Ballistic coefficient -->
                        <RowDefinition Height="Auto"/>
                        <!-- Bullet Weight -->
                        <RowDefinition Height="Auto"/>
                        <!-- Bullet Diameter -->
                        <RowDefinition Height="Auto"/>
                        <!-- Drag Model -->
                        <RowDefinition Height="Auto"/>
                        <!-- Target radius -->
                        <RowDefinition Height="Auto"/>
                        <!-- Muzzle velocity -->
                        <RowDefinition Height="Auto"/>
                        <!-- Barrel Twist -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110.297"/>
                        <ColumnDefinition Width="89.703"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Drag Model:" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="5,5,5,5">
                        <RadioButton x:Name="None" Content="None" Margin="5"/>
                        <RadioButton x:Name="G1" Content="G1" Margin="5" IsChecked="True"/>
                        <RadioButton x:Name="G7" Content="G7" Margin="5"/>
                    </StackPanel>

                    <TextBlock Text="Ballistic coefficient:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="BallisticCoefficientTextBox" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5"/>

                    <TextBlock Text="Bullet Weight (gr):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="BulletWeightTextBox" Grid.Row="2" Grid.Column="2" Margin="5,5,5,5"/>

                    <TextBlock Text="Bullet Diameter (mm):" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="BulletDiameterTextBox" Grid.Row="3" Grid.Column="2" Margin="5,5,5,5"/>

                    <TextBlock Text="Muzzle velocity (m/s):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="MuzzleVelocityTextBox" Grid.Row="4" Grid.Column="2" Margin="5,5,5,5"/>

                    <TextBlock Text="Barrel Twist(mm/rev):" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="BarrelTwistTextBox" Grid.Row="5" Grid.Column="2" Margin="5,5,5,5"/>

                    <TextBlock Text="Sight height (cm):" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="SightHeightTextBox" Grid.Row="6" Grid.Column="2" Margin="5,5,5,5"/>

                    <TextBlock Text="Zero Distance (m):" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="ZeroDistanceTextBox" Grid.Row="7" Grid.Column="2" Margin="5,5,5,5"/>

                </Grid>
            </TabItem>

            <!-- Tab 2: Target & Wind -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock TextAlignment="Center">
                    Conditions+
                    <LineBreak/>
                    Environment
                    </TextBlock>
                </TabItem.Header>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Sight height -->
                        <RowDefinition Height="Auto"/>
                        <!-- Zero Distance -->
                        <RowDefinition Height="Auto"/>
                        <!-- Wind Direction -->
                        <RowDefinition Height="Auto"/>
                        <!-- Wind Speed -->
                        <RowDefinition Height="Auto"/>
                        <!-- Target Type -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Previews -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Wind Speed (m/s):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="WindSpeedTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Wind Direction (deg):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="WindDirectionTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Altitude (m):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="AltitudeTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Pressure (hPa):" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="PressureTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Temperature (*C):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TemperatureTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Humidity (%):" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="HumidityTextBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Shooting Angle (deg):" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="ShootingAngleTextBox" Grid.Row="6" Grid.Column="1" Margin="5"/>
                </Grid>
            </TabItem>
            <!-- Tab 2: Target & Wind -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock TextAlignment="Center">
                        Output
                        <LineBreak/>
                        Settings
                    </TextBlock>
                </TabItem.Header>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Sight height -->
                        <RowDefinition Height="Auto"/>
                        <!-- Zero Distance -->
                        <RowDefinition Height="Auto"/>
                        <!-- Wind Direction -->
                        <RowDefinition Height="Auto"/>
                        <!-- Wind Speed -->
                        <RowDefinition Height="Auto"/>
                        <!-- Target Type -->
                        <RowDefinition Height="Auto"/>
                        <!-- Previews -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Distance to target (m):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="DistanceTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Target radius (cm):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TargetRadiusTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Target Type:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5">
                        <RadioButton x:Name="CircularOption" Content="Circular" Margin="5" IsChecked="True"/>
                        <RadioButton x:Name="AxesOption" Content="Axes" Margin="5"/>
                    </StackPanel>

                    <!-- Previews -->
                    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <StackPanel Margin="5">
                            <TextBlock Text="Circular Preview" HorizontalAlignment="Center"/>
                            <Canvas x:Name="CircularPreview" Width="100" Height="100" Background="White"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Axes Preview" HorizontalAlignment="Center"/>
                            <Canvas x:Name="AxesPreview" Width="100" Height="100" Background="White"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click"/>
            <Button Content="Reset" Width="80" Margin="5" Click="ResetButton_Click"/>
            <Button Content="Exit" Width="80" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
        <Button x:Name="FocusSink" Width="0" Height="0" Opacity="0" Focusable="True" IsTabStop="False"/>
    </Grid>
</Window>
